{% if service.flash.messages is not empty %}
    <div class="container-content container">
        {% for flashMessageType, flashMessagesList in service.flash.messages %}
            {% for flashMessage in flashMessagesList %}
                <div class="alert alert-{{ flashMessageType }} alert-dismissible fade show" role="alert">
                    <strong>{{ flashMessageType|capitalize }}!</strong> {{ flashMessage }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
